<view class="lu_ruqy">
  <form bindsubmit="submitForm">
    <view class="hang">
      <view class="title">企业名称</view>
      <view><input name="name" placeholder="请输入企业名称" value="{{formData.name}}" /></view>
    </view>
    <view class="hr"></view>
    <view class="hang">
      <view class="title">地 址</view>
      <view><input name="address" placeholder="请输入地址" value="{{formData.address}}"/></view>
    </view>
    <view class="hr"></view>
    <view class="hang">
      <view class="title">联系方式</view>
      <view><input name="contact" placeholder="请输入微信号" value="{{formData.contact}}" type="text"/></view>
    </view>
    <view class="hr"></view>
    <view class="hang">
      <view class="title">企业规模</view>
      <view><input name="gui_mo" placeholder="请输入企业规模" value="{{formData.gui_mo}}" type="text"/></view>
    </view>
    <view class="hr"></view>
    <view class="hang1">
      <view class="title1">主要业务</view>
      <view><textarea name="ye_wu" placeholder="请输入公司的主要业务方向" value="{{formData.ye_wu}}"/></view>
    </view>
    <button formType="submit">提交</button>
  </form>
</view>
